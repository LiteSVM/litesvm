{
	"compilerOptions": {
		"declaration": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2020",
		"lib": ["es2020", "es2022", "dom"],
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"baseUrl": "./litesvm",
		"paths": {
			"litesvm": [
				"./"
			],
			"@/*": [
				"../*"
			]
		},
		"resolveJsonModule": true
	},
	"include": [
		"litesvm/**/*"
	]
}