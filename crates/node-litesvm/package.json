{
	"name": "litesvm",
	"version": "0.2.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/"
	],
	"napi": {
		"binaryName": "litesvm",
		"targets": [
			"x86_64-apple-darwin",
			"x86_64-unknown-linux-gnu",
			"aarch64-apple-darwin",
			"x86_64-unknown-linux-musl",
			"universal-apple-darwin"
		]
	},
	"license": "MIT",
	"dependencies": {
		"@solana/web3.js": "^1.68.0",
		"bs58": "^4.0.1"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.0.0-alpha.89",
		"@solana/spl-token": "^0.3.7",
		"@swc/core": "^1.10.7",
		"@types/bs58": "^4.0.1",
		"@types/markdown-it": "^14.1.0",
		"@types/node-fetch": "^2.6.4",
		"bigint-buffer": "^1.1.5",
		"markdown-it": "^14.1.0",
		"markdown-it-include": "^2.0.0",
		"rome": "^12.0.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typedoc": "^0.24.0",
		"typedoc-plugin-markdown": "^3.15.3",
		"typescript": "5.1.6",
		"vuepress": "^1.9.9",
		"vuepress-plugin-typedoc": "^0.12.1"
	},
	"engines": {
		"node": ">= 10"
	},
	"scripts": {
		"artifacts": "napi artifacts",
		"build": "napi build --platform --release --output-dir litesvm --dts internal.d.ts --js internal.js",
		"build:debug": "napi build --platform litesvm --dts internal.d.ts --js internal.js",
		"prepublishOnly": "napi prepublish -t npm",
		"fmt": "yarn fmt:rust && yarn fmt:js",
		"fmt:rust": "cargo fmt",
		"fmt:js": "rome format --write litesvm/index.ts tests/ tsconfig.json package.json",
		"lint": "yarn lint:rust && yarn lint:js",
		"lint:rust": "cargo clippy",
		"lint:js": "rome check litesvm/index.ts tests/ tsconfig.json package.json",
		"test": "gdb --batch -x gdb.cmds --args node --max-old-space-size=4096 -r ts-node/register -r tsconfig-paths/register --test --test-concurrency=1 tests/*.test.ts 2>&1",
		"build:js": "tsc --build && cp litesvm/internal.d.ts dist/internal.d.ts",
		"universal": "napi universal",
		"cargoBump": "cargo set-version --package litesvm-node --bump",
		"bumpPatch": "yarn version --no-git-tag-version --patch && napi version && cargo tree",
		"bumpMinor": "yarn version --no-git-tag-version --minor && napi version && cargo tree",
		"bumpMajor": "yarn version --no-git-tag-version --major && napi version && cargo tree",
		"docs:dev": "NODE_OPTIONS=--openssl-legacy-provider vuepress dev docs",
		"docs:build": "NODE_OPTIONS=--openssl-legacy-provider vuepress build docs"
	}
}